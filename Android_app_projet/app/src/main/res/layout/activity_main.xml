<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pb"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            //数据1

            <Button
                android:id="@+id/button_1"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/wrodbg"
                android:drawableTop="@drawable/repeat"
                android:text="初始化数据"
                android:textSize="16sp" />


            //数据2

            <Button
                android:id="@+id/button_2"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/wrodbg"
                android:drawableTop="@drawable/stats"
                android:text="腰姿测量"
                android:textSize="16sp" />

            //开关

            <Button
                android:id="@+id/button_3"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/wrodbg"
                android:drawableTop="@drawable/bookmark"
                android:text="马甲开关"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/connect"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/fwq"
            android:background="@drawable/bbj"
            android:text="连接服务器"
            android:textSize="16sp" />

        <Button
            android:id="@+id/send"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bbj"
            android:drawableTop="@drawable/fs"
            android:text="发送数据"
            android:textSize="16sp" />

        <Button
            android:id="@+id/zhao"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/sjwl"
            android:background="@drawable/bbj"
            android:text="查看训练结果"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <Button
        android:id="@+id/tupian"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:drawableTop="@drawable/sj"
        android:background="@drawable/bbj"
        android:text="数据分析"
        android:textSize="16sp" />
        <Button
            android:id="@+id/clean"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:drawableTop="@drawable/clean"
            android:background="@drawable/bbj"
            android:text="清除数据"
            android:textSize="16sp" />
        <Button
            android:id="@+id/over"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:drawableTop="@drawable/dk"
            android:background="@drawable/bbj"
            android:text="断开服务器"
            android:textSize="16sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="285dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/lx"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shapes"
                android:text="数据采集"
                android:textSize="16sp" />
            <Button
                android:id="@+id/zx"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shapes"
                android:text="数据处理"
                android:textSize="16sp" />
            <Button
                android:id="@+id/wd"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shapes"
                android:text="我的"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
